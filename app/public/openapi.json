{
  "openapi": "3.0.3",
  "info": {
    "title": "HNL Players API",
    "description": "RESTful API for managing Croatian Football League (HNL) players and clubs data. Provides CRUD operations for players and read-only access to clubs information.",
    "version": "1.0.0",
    "contact": {
      "name": "FER - Otvoreno računarstvo",
      "email": "student@fer.hr"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "players",
      "description": "Operations related to HNL players"
    },
    {
      "name": "clubs",
      "description": "Operations related to HNL clubs"
    },
    {
      "name": "data",
      "description": "Data management operations (requires authentication)"
    }
  ],
  "paths": {
    "/api/players": {
      "get": {
        "tags": ["players"],
        "summary": "Get all players",
        "description": "Retrieves a list of all HNL players with optional search and filtering capabilities",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Search query string to filter players",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter",
            "in": "query",
            "description": "Field to filter by (all, ime, prezime, nacionalnost, pozicija, klub)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "ime", "prezime", "nacionalnost", "pozicija", "klub"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Players retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayersResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Players retrieved successfully",
                  "response": [
                    {
                      "id": 1,
                      "ime": "Marko",
                      "prezime": "Marić",
                      "nacionalnost": "Hrvatska",
                      "pozicija": "Golman",
                      "broj_dresa": 1,
                      "vrijednost_eur": 500000,
                      "klub": "Dinamo Zagreb"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "tags": ["players"],
        "summary": "Create a new player",
        "description": "Creates a new HNL player record",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerInput"
              },
              "example": {
                "ime": "Ivan",
                "prezime": "Ivić",
                "nacionalnost": "Hrvatska",
                "datum_rodenja": "1995-05-15",
                "pozicija": "Napadač",
                "broj_dresa": 9,
                "vrijednost_eur": 750000,
                "datum_potpisa": "2024-01-15",
                "klub_id": 1
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Player created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayerResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Player created successfully",
                  "response": {
                    "id": 123,
                    "ime": "Ivan",
                    "prezime": "Ivić",
                    "nacionalnost": "Hrvatska",
                    "datum_rodenja": "1995-05-15",
                    "pozicija": "Napadač",
                    "broj_dresa": 9,
                    "vrijednost_eur": 750000,
                    "datum_potpisa": "2024-01-15",
                    "klub_id": 1
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/players/{id}": {
      "get": {
        "tags": ["players"],
        "summary": "Get player by ID",
        "description": "Retrieves a single player by their ID with club information. Response includes JSON-LD semantic context mapping to Schema.org Person type.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Player ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player retrieved successfully with JSON-LD context",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "response": { "$ref": "#/components/schemas/PlayerWithJsonLd" }
                      }
                    }
                  ]
                },
                "example": {
                  "status": "OK",
                  "message": "Player retrieved successfully",
                  "response": {
                    "@context": {
                      "@vocab": "https://schema.org/",
                      "ime": "givenName",
                      "prezime": "familyName",
                      "nacionalnost": "nationality",
                      "datum_rodenja": "birthDate",
                      "pozicija": "jobTitle"
                    },
                    "@type": "Person",
                    "id": 1,
                    "ime": "Marko",
                    "prezime": "Marić",
                    "nacionalnost": "Hrvatska",
                    "datum_rodenja": "1992-03-10",
                    "pozicija": "Golman",
                    "broj_dresa": 1,
                    "vrijednost_eur": 500000,
                    "datum_potpisa": "2023-07-01",
                    "klub_id": 1,
                    "klub": "Dinamo Zagreb"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "put": {
        "tags": ["players"],
        "summary": "Update player",
        "description": "Updates an existing player's information",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Player ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerInput"
              },
              "example": {
                "ime": "Marko",
                "prezime": "Marić",
                "nacionalnost": "Hrvatska",
                "datum_rodenja": "1992-03-10",
                "pozicija": "Golman",
                "broj_dresa": 1,
                "vrijednost_eur": 600000,
                "datum_potpisa": "2023-07-01",
                "klub_id": 1
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayerResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Player updated successfully",
                  "response": {
                    "id": 1,
                    "ime": "Marko",
                    "prezime": "Marić",
                    "nacionalnost": "Hrvatska",
                    "datum_rodenja": "1992-03-10",
                    "pozicija": "Golman",
                    "broj_dresa": 1,
                    "vrijednost_eur": 600000,
                    "datum_potpisa": "2023-07-01",
                    "klub_id": 1
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "delete": {
        "tags": ["players"],
        "summary": "Delete player",
        "description": "Deletes a player from the database",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Player ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Player deleted successfully",
                  "response": null
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/clubs": {
      "get": {
        "tags": ["clubs"],
        "summary": "Get all clubs",
        "description": "Retrieves a list of all HNL clubs ordered by name",
        "responses": {
          "200": {
            "description": "Clubs retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClubsResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Clubs retrieved successfully",
                  "response": [
                    {
                      "id": 1,
                      "ime": "Dinamo Zagreb",
                      "stadion_domacin": "Maksimir",
                      "godina_osnutka": 1945
                    },
                    {
                      "id": 2,
                      "ime": "Hajduk Split",
                      "stadion_domacin": "Poljud",
                      "godina_osnutka": 1911
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/clubs/{id}": {
      "get": {
        "tags": ["clubs"],
        "summary": "Get club by ID",
        "description": "Retrieves a single club by its ID. Response includes JSON-LD semantic context mapping to Schema.org SportsTeam type.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Club ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Club retrieved successfully with JSON-LD context",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "response": { "$ref": "#/components/schemas/ClubWithJsonLd" }
                      }
                    }
                  ]
                },
                "example": {
                  "status": "OK",
                  "message": "Club retrieved successfully",
                  "response": {
                    "@context": {
                      "@vocab": "https://schema.org/",
                      "ime": "name",
                      "stadion_domacin": "location"
                    },
                    "@type": "SportsTeam",
                    "id": 1,
                    "ime": "Dinamo Zagreb",
                    "stadion_domacin": "Maksimir",
                    "godina_osnutka": 1945
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/players/club/{club_id}": {
      "get": {
        "tags": ["players"],
        "summary": "Get players by club",
        "description": "Retrieves all players belonging to a specific club",
        "parameters": [
          {
            "name": "club_id",
            "in": "path",
            "description": "Club ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Players retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayersResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Players retrieved successfully",
                  "response": [
                    {
                      "id": 1,
                      "ime": "Marko",
                      "prezime": "Marić",
                      "nacionalnost": "Hrvatska",
                      "datum_rodenja": "1992-03-10",
                      "pozicija": "Golman",
                      "broj_dresa": 1,
                      "vrijednost_eur": 500000,
                      "datum_potpisa": "2023-07-01",
                      "klub_id": 1,
                      "klub": "Dinamo Zagreb"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/openapi.json": {
      "get": {
        "tags": ["documentation"],
        "summary": "Get OpenAPI specification",
        "description": "Returns the complete OpenAPI 3.0.3 specification for this API",
        "responses": {
          "200": {
            "description": "OpenAPI specification retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/refresh": {
      "post": {
        "tags": ["data"],
        "summary": "Refresh data files",
        "description": "Regenerates the hnl_igraci.json and hnl_igraci.csv files from the database. Requires authentication via Auth0.",
        "security": [
          {
            "auth0": []
          }
        ],
        "responses": {
          "200": {
            "description": "Files refreshed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RefreshResponse"
                },
                "example": {
                  "status": "OK",
                  "message": "Preslike uspješno osvježene",
                  "response": {
                    "jsonFile": "/hnl_igraci.json",
                    "csvFile": "/hnl_igraci.csv",
                    "clubsCount": 10,
                    "playersCount": 200
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique player identifier"
          },
          "ime": {
            "type": "string",
            "description": "Player first name"
          },
          "prezime": {
            "type": "string",
            "description": "Player last name"
          },
          "nacionalnost": {
            "type": "string",
            "nullable": true,
            "description": "Player nationality"
          },
          "datum_rodenja": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Player birth date (ISO 8601 format)"
          },
          "pozicija": {
            "type": "string",
            "nullable": true,
            "description": "Player position"
          },
          "broj_dresa": {
            "type": "integer",
            "nullable": true,
            "description": "Jersey number"
          },
          "vrijednost_eur": {
            "type": "integer",
            "nullable": true,
            "description": "Player market value in EUR"
          },
          "datum_potpisa": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Contract signing date (ISO 8601 format)"
          },
          "klub_id": {
            "type": "integer",
            "nullable": true,
            "description": "Club ID (foreign key)"
          },
          "klub": {
            "type": "string",
            "nullable": true,
            "description": "Club name (joined data)"
          }
        },
        "required": ["id", "ime", "prezime"]
      },
      "PlayerInput": {
        "type": "object",
        "properties": {
          "ime": {
            "type": "string",
            "description": "Player first name"
          },
          "prezime": {
            "type": "string",
            "description": "Player last name"
          },
          "nacionalnost": {
            "type": "string",
            "nullable": true,
            "description": "Player nationality"
          },
          "datum_rodenja": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Player birth date (ISO 8601 format)"
          },
          "pozicija": {
            "type": "string",
            "nullable": true,
            "description": "Player position"
          },
          "broj_dresa": {
            "type": "integer",
            "nullable": true,
            "minimum": 0,
            "maximum": 99,
            "description": "Jersey number (0-99)"
          },
          "vrijednost_eur": {
            "type": "integer",
            "nullable": true,
            "minimum": 0,
            "description": "Player market value in EUR"
          },
          "datum_potpisa": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Contract signing date (ISO 8601 format)"
          },
          "klub_id": {
            "type": "integer",
            "nullable": true,
            "minimum": 1,
            "description": "Club ID (must reference existing club)"
          }
        },
        "required": ["ime", "prezime"]
      },
      "Club": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique club identifier"
          },
          "ime": {
            "type": "string",
            "description": "Club name"
          },
          "stadion_domacin": {
            "type": "string",
            "nullable": true,
            "description": "Home stadium name"
          },
          "godina_osnutka": {
            "type": "integer",
            "nullable": true,
            "description": "Year club was founded"
          }
        },
        "required": ["id", "ime"]
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["OK", "Error"],
            "description": "Response status"
          },
          "message": {
            "type": "string",
            "description": "Response message"
          },
          "response": {
            "description": "Response data (null on error)",
            "nullable": true
          }
        },
        "required": ["status", "message", "response"]
      },
      "PlayerResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "response": {
                "$ref": "#/components/schemas/Player"
              }
            }
          }
        ]
      },
      "PlayersResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "response": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          }
        ]
      },
      "ClubResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "response": {
                "$ref": "#/components/schemas/Club"
              }
            }
          }
        ]
      },
      "ClubsResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "response": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Club"
                }
              }
            }
          }
        ]
      },
      "DeleteResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "response": {
                "type": "null"
              }
            }
          }
        ]
      },
      "ErrorResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "enum": ["Error"]
              },
              "response": {
                "type": "null"
              }
            }
          }
        ]
      },
      "RefreshResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "response": {
                "type": "object",
                "properties": {
                  "jsonFile": {
                    "type": "string",
                    "description": "Path to generated JSON file"
                  },
                  "csvFile": {
                    "type": "string",
                    "description": "Path to generated CSV file"
                  },
                  "clubsCount": {
                    "type": "integer",
                    "description": "Number of clubs exported"
                  },
                  "playersCount": {
                    "type": "integer",
                    "description": "Number of players exported"
                  }
                }
              }
            }
          }
        ]
      },
      "JsonLdContext": {
        "type": "object",
        "description": "JSON-LD context for semantic data representation",
        "properties": {
          "@vocab": {
            "type": "string",
            "description": "Base vocabulary URL (schema.org)"
          }
        }
      },
      "PlayerWithJsonLd": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Player"
          },
          {
            "type": "object",
            "properties": {
              "@context": {
                "type": "object",
                "description": "JSON-LD context mapping attributes to Schema.org Person type + custom HNL vocabulary",
                "properties": {
                  "@vocab": { "type": "string", "description": "https://schema.org/" },
                  "hnl": { "type": "string", "description": "Custom namespace: https://hnl.hr/schema#" },
                  "id": { "type": "string", "description": "Maps to identifier" },
                  "ime": { "type": "string", "description": "Maps to givenName" },
                  "prezime": { "type": "string", "description": "Maps to familyName" },
                  "nacionalnost": { "type": "string", "description": "Maps to nationality" },
                  "datum_rodenja": { "type": "string", "description": "Maps to birthDate" },
                  "pozicija": { "type": "string", "description": "Maps to jobTitle" },
                  "klub": { "type": "string", "description": "Maps to memberOf" },
                  "broj_dresa": { "type": "string", "description": "Maps to hnl:jerseyNumber" },
                  "vrijednost_eur": { "type": "string", "description": "Maps to hnl:marketValueEUR" },
                  "datum_potpisa": { "type": "string", "description": "Maps to hnl:contractSignedDate" },
                  "klub_id": { "type": "string", "description": "Maps to hnl:clubId" }
                }
              },
              "@type": {
                "type": "string",
                "enum": ["Person"],
                "description": "Schema.org type"
              }
            }
          }
        ]
      },
      "ClubWithJsonLd": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Club"
          },
          {
            "type": "object",
            "properties": {
              "@context": {
                "type": "object",
                "description": "JSON-LD context mapping attributes to Schema.org SportsTeam type",
                "properties": {
                  "@vocab": { "type": "string", "description": "https://schema.org/" },
                  "id": { "type": "string", "description": "Maps to identifier" },
                  "ime": { "type": "string", "description": "Maps to name" },
                  "stadion_domacin": { "type": "string", "description": "Maps to location" },
                  "godina_osnutka": { "type": "string", "description": "Maps to foundingDate" }
                }
              },
              "@type": {
